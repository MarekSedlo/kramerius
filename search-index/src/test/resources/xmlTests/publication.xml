<testSuite testType="mods" model="monograph">

    <test name="publisher I">
        <desc></desc>
        <in>
            <originInfo>
                <publisher>Grada</publisher>
            </originInfo>
        </in>
        <out>
            <field name="n.publishers.facet">Grada</field>
            <field name="n.publishers.search">Grada</field>
        </out>
    </test>

    <test name="publisher II">
        <desc></desc>
        <in>
            <originInfo>
                <publisher>Grada</publisher>
            </originInfo>
            <originInfo>
                <publisher>Albatros</publisher>
            </originInfo>
        </in>
        <out>
            <field name="n.publishers.facet">Grada</field>
            <field name="n.publishers.facet">Albatros</field>
            <field name="n.publishers.search">Grada</field>
            <field name="n.publishers.search">Albatros</field>
        </out>
    </test>

    <test name="publication place - multiple places in same originInfo">
        <desc></desc>
        <in>
            <originInfo>
                <place>
                    <placeTerm type="text">Burbank</placeTerm>
                </place>
                <place>
                    <placeTerm type="text">Los Angeles</placeTerm>
                </place>
            </originInfo>
        </in>
        <out>
            <field name="n.publication_places.facet">Burbank</field>
            <field name="n.publication_places.facet">Los Angeles</field>
            <field name="n.publication_places.search">Burbank</field>
            <field name="n.publication_places.search">Los Angeles</field>
        </out>
    </test>

    <test name="publication place - multiple placeterms for single place">
        <desc></desc>
        <in>
            <originInfo>
                <place>
                    <placeTerm type="text">Burbank</placeTerm>
                </place>
                <place>
                    <placeTerm type="text">Los Angeles</placeTerm>
                    <placeTerm type="text">El Pueblo de Nuestra Señora la Reina de los Ángeles</placeTerm>
                </place>
            </originInfo>
        </in>
        <out>
            <field name="n.publication_places.facet">Burbank</field>
            <field name="n.publication_places.facet">Los Angeles</field>
            <field name="n.publication_places.facet">El Pueblo de Nuestra Señora la Reina de los Ángeles</field>
            <field name="n.publication_places.search">Burbank</field>
            <field name="n.publication_places.search">Los Angeles</field>
            <field name="n.publication_places.search">El Pueblo de Nuestra Señora la Reina de los Ángeles</field>
        </out>
    </test>

    <test name="publication place - multiple originInfox">
        <desc></desc>
        <in>
            <originInfo>
                <place>
                    <placeTerm type="text">Burbank</placeTerm>
                </place>
            </originInfo>
            <originInfo>
                <place>
                    <placeTerm type="text">Los Angeles</placeTerm>
                </place>
            </originInfo>
        </in>
        <out>
            <field name="n.publication_places.facet">Burbank</field>
            <field name="n.publication_places.facet">Los Angeles</field>
            <field name="n.publication_places.search">Burbank</field>
            <field name="n.publication_places.search">Los Angeles</field>
        </out>
    </test>

    <test name="publication place - ignore placeTerms without @type='text'">
        <desc></desc>
        <in>
            <originInfo>
                <place>
                    <placeTerm type="text">Burbank</placeTerm>
                    <placeTerm type="code">BURBANK</placeTerm>
                </place>
                <place>
                    <placeTerm type="text">Los Angeles</placeTerm>
                    <placeTerm>City of Angels</placeTerm>
                </place>
            </originInfo>
        </in>
        <out>
            <field name="n.publication_places.facet">Burbank</field>
            <field name="n.publication_places.facet">Los Angeles</field>
            <field name="n.publication_places.search">Burbank</field>
            <field name="n.publication_places.search">Los Angeles</field>
        </out>
    </test>

    <test name="publication place - include placeTerms with @authority and @type='text'">
        <desc>@authority souvisí s @code, pokud by mělo něco jen @authority a @type='text', tak se to zaindexuje a je to spíš chyba v datech</desc>
        <in>
            <originInfo>
                <place>
                    <placeTerm type="text">Burbank</placeTerm>
                    <placeTerm type="code">BURBANK</placeTerm>
                </place>
                <place>
                    <placeTerm type="text">Los Angeles</placeTerm>
                    <placeTerm>City of Angels</placeTerm>
                </place>
                <place>
                    <placeTerm authority="marccountry" type="text">Glendale</placeTerm>
                </place>
            </originInfo>
        </in>
        <out>
            <field name="n.publication_places.facet">Burbank</field>
            <field name="n.publication_places.facet">Los Angeles</field>
            <field name="n.publication_places.facet">Glendale</field>
            <field name="n.publication_places.search">Burbank</field>
            <field name="n.publication_places.search">Los Angeles</field>
            <field name="n.publication_places.search">Glendale</field>
        </out>
    </test>

</testSuite>

