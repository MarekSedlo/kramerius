<cdkprocess>
    <!-- Iteration part -->
    <iteratorFactory class="cz.incad.kramerius.services.iterators.solr.SolrIteratorFactory"></iteratorFactory>
    <iteration>
        <url>https://kramerius.lib.cas.cz/search/api/v5.0</url>
        <endpoint>search</endpoint>

        <id>PID</id>
        <rows>50</rows>
        <type>CURSOR</type>
    </iteration>

    <threads>1</threads>


    <workerFactory class="cz.incad.kramerius.services.workers.replicate.ReplicateSolrWorkerFactory"></workerFactory>
    <worker>
        <request>
            <url>https://kramerius.lib.cas.cz/search/api/v5.0</url>
            <endpoint>search</endpoint>
            <batchsize>20</batchsize>

            <!-- for get information about collections and urls -->
            <local.kramerius>http://192.168.10.109:8080/search/</local.kramerius>
            <local.collections>vc:c4bb27af-3a51-4ac2-95c7-fd393b489e26</local.collections>



            <!-- toto vyresit lip -->
            <collections.url>

                <elem>
                    <key>vc:700a6cc7-1e5c-4487-b111-c425cbc51091</key>
                    <value>https://kramerius.mzk.cz/search</value>
                </elem>
                <elem>
                    <key>vc:c4bb27af-3a51-4ac2-95c7-fd393b489e26</key>
                    <value>https://kramerius.lib.cas.cz/search/</value>
                </elem>

                <elem>
                    <key>vc:4e6b7ee5-3374-4cde-9289-e1f6a2a335b2</key>
                    <value>http://kramerius.cbvk.cz/search</value>
                </elem>

                <elem>
                    <key>vc:d34ba74b-026a-4c60-aee7-9250a307952c</key>
                    <value>http://kramerius.svkhk.cz/search/</value>
                </elem>

                <!--
                <elem>
                    <key>vc:c4bb27af-3a51-4ac2-95c7-fd393b489e26</key>
                    <value>https://kramerius.mzk.cz/search</value>
                </elem>
                -->
            </collections.url>
        </request>

        <destination>
            <url>http://192.168.10.109:18984/solr-test/kramerius-cdk-test/update</url>

            <!-- on index -->
            <onindex>
                <!-- remove from batch document -->
                <remove.dest.field>
                    <field name="collection"></field>
                </remove.dest.field>
                <!-- append to batch document -->
                <update.dest.field>
                    <field name="collection">vc:c4bb27af-3a51-4ac2-95c7-fd393b489e26</field>
                </update.dest.field>
            </onindex>
            <!-- on update -->
            <onupdate>
                <update.dest.field>
                    <field name="collection" update="add-distinct">vc:c4bb27af-3a51-4ac2-95c7-fd393b489e26</field>
                </update.dest.field>
            </onupdate>

        </destination>
    </worker>
</cdkprocess>
